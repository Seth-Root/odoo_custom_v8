<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="company_custom_external_layout_footer" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace"/>
        </template>
        
        <template id="company_custom_external_layout_header" inherit_id="report.external_layout_header">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header" >
                    <div class="row">
                        <div align="right">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                    style="max-height: 150px; max-weight:80px"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div align="right">
                            <div t-field="company.partner_id" 
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div align="right">
                            <div t-field="company.phone"/>
                            <div t-field="company.fax"/>
                            <div t-field="company.email"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <ul class="list-inline" align="right">
                            <li>Page:</li>
                            <li><span class="page"/></li>
                            <li>/</li>
                            <li><span class="topage"/></li>
                        </ul>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
