<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <template id="company_custom_layout_header">
                <div class="header" style="background-color:blue;position:absolute;right: 50px;width:30%">
                    <div class="row">
                        <div align="right">
                            <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % o.company_id.logo"
                                    style="max-height: 150px; max-weight:80px"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div align="right">
                            <div t-field="o.company_id.partner_id" 
                                t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div align="right">
                            <div t-field="o.company_id.phone"/>
                            <div t-field="o.company_id.fax"/>
                            <div t-field="o.company_id.email"/>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <ul class="list-inline" align="right">
                            <li>Page:</li>
                            <li><span class="page"/></li>
                            <li>/</li>
                            <li><span class="topage"/></li>
                        </ul>
                    </div>
                </div>
        </template>
    </data>
</openerp>
