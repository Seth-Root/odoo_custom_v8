<?xml version="1.0"?>
<openerp>
	<data>
	<!-- Form View -->
		<record id="view_form_traveler_register" model="ir.ui.view">
			<field name="name">view.form.traveler.register</field>
			<field name="model">traveler.register</field>
			<field name="arch" type="xml">
				<form string="Registro de Viajeros" class="form-horizontal">
					<header>
						<button name="print_register" type="object" string="Imprimir" class="oe_highlight" />
					</header>
					<sheet>
						
						<legend>Datos del Establecimiento</legend>
						<div class="row">
						  <div class="col-md-3"><strong>CIF:</strong></div>
						  <div class="col-md-5">B10163608</div>
						  <div class="col-md-2"><strong>Parte nº:</strong></div>
						  <div class="col-md-2">001</div>
						</div>
						<div class="row">
						  <div class="col-md-3"><strong>Nombre del establecimiento:</strong></div>
						  <div class="col-md-5">Lalita Devi Escuela de Vida S.L</div>
						</div>
						<div class="row">
						  <div class="col-md-3"><strong>Municipio:</strong></div>
						  <div class="col-md-5">Acebo</div>
						</div>
						<div class="row">
						  <div class="col-md-3"><strong>Provincia:</strong></div>
						  <div class="col-md-5">Cáceres</div>
						</div>
						<br/>
						<legend>Datos del Viajero</legend>
						<group>
                            <field name="doc_number"/>
                            <field name="doc_type"/>
                            <field name="date_due"/>
                            <field name="last_name1"/>
                            <field name="last_name2"/>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="birth_date"/>
                            <field name="birth_country"/>
                            <field name="entry_date"/>
                            <filed name="sent"/>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- List & Search View 	-->
		<record id="view_tree_traveler_register" model="ir.ui.view">
			<field name="name">view.tree.traveler.register</field>
			<field name="model">traveler.register</field>
			<field name="arch" type="xml">
				<tree colors="gray:sent==True">
					<field name="entry_date"/>
					<field name="last_name1"/>
					<field name="last_name2"/>
					<field name="name"/>
					<field name="doc_number"/>
					<field name="sent"/>
				</tree>
			</field>
		</record>
        
		<!-- Action to open To-do Task list -->
         <record id="action_traveler_register" model="ir.actions.act_window">
            <field name="name">Registro de Viajeros</field>
            <field name="res_model">traveler.register</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

       <!-- Menu item to open To-do Task list -->
		<menuitem id="traveler_register_menu"
		  name="Registro Viajeros"
		  parent="mail.mail_feeds"
		  sequence="10"
		  action="action_traveler_register" />
	</data>
</openerp>
