<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Menú Structure Lalita-->
        <menuitem id="menu_root_reservation" name="Reservas" sequence="20" />
        <menuitem id="menu_reservation" name="Reservas" parent="root_reservation" sequence="10" />
        <menuitem id="menu_reservation_config" name="Configuración" parent="root_reservation" sequence="10" />
        
        <!-- Form View Reservas-->
        <record id="view_form_lalita_reservation" model="ir.ui.view">
            <field name="name">view.form.lalita.reservation</field>
            <field name="model">lalita.reservation</field>
            <field name="arch" type="xml">
                <form string="Reservas" class="form-horizontal">
                    <header>
                        <button name="print_reservation" type="object" string="Imprimir" class="oe_highlight" />
                    </header>
                    <sheet>
                        <legend>Reservas</legend>
                        <group>
                            <field name="partner_id"/>
                            <field name="pricelist_id"/>
                            <field name="arrival_date"/>
                            <field name="out_date"/>
                            <field name="ocupation_days"/>
                            <field name="berths"/>
                            <field name="state"/>
                            <field name="notes"/>
                            <field name="expected_income"/>
                            <field name="client_ids" widget='many2many'/>
                            <field name="room_ids" widget='many2many'/>
                        <!--<field name="quotations_ids" widget='many2many'/> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- List & Search View  Reservas -->
        <record id="view_tree_lalita_reservation" model="ir.ui.view">
            <field name="name">view.tree.lalita.reservation</field>
            <field name="model">lalita.reservation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="pricelist_id"/>
                    <field name="arrival_date"/>
                    <field name="out_date"/>
                    <field name="ocupation_days"/>
                    <field name="berths"/>
                    <field name="state"/>
                    <field name="notes"/>
                    <field name="expected_income"/>
                </tree>
            </field>
        </record>

        <!-- Action to open Reservas -->
        <record id="action_lalita_reservation" model="ir.actions.act_window">
            <field name="name">Reservas</field>
            <field name="res_model">lalita.reservation</field>
            <field name="view_mode">tree,form</field>
        </record>

       <!-- Menu item to Reservas -->
        <menuitem id="menu_lalita_reservation"
          name="Reservas"
          parent="menu_reservation"
          sequence="10"
          action="action_lalita_reservation" />
        
        <!-- Form View Rooms -->
            <record id="view_form_room" model="ir.ui.view">
                <field name="name">Formulario de Habitaciones</field>
                <field name="model">room</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <legend>Room</legend>
                            <group>
                            <field name="nombre"/>
                            <field name="plazas"/>
                            <field name="beds" widget='one2many'/>
                        </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!-- List & Search View Rooms -->
            <record id="view_tree_room" model="ir.ui.view">
                <field name="name">Habitaciones</field>
                <field name="model">room</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="nombre"/>
                        <field name="plazas"/>
                    </tree>
                </field>
            </record>
        
        <!-- Form View Beds -->
            <record id="view_form_bed" model="ir.ui.view">
                <field name="name">Formulario de Camas</field>
                <field name="model">bed</field>
                <field name="arch" type="xml">
                    <form>
                        <sheet>
                            <legend>Cama</legend>
                            <group>
                                <field name="nombre"/>
                                <field name="tipo"/>

                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!-- List & Search View Beds-->
            <record id="view_tree_bed" model="ir.ui.view">
                <field name="name">Camas</field>
                <field name="model">bed</field>
                <field name="arch" type="xml">
                    <tree>
                        <field name="nombre"/>
                        <field name="tipo"/>

                    </tree>
                </field>
            </record>

        
        
        <!-- Action to open Beds -->
        
        <record id="action_bed" model="ir.actions.act_window">
            <field name="name">Beds</field>
            <field name="res_model">bed</field>
            <field name="view_mode">tree,form</field>
        </record>
        

       <!-- Menu item to open Beds -->
        <menuitem id="_beds"
          name="Beds"
          parent="reservas_conf"
          sequence="10"
          action="action_bed" />
        
        <!-- Action to open Room -->
        
        <record id="action_room" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="res_model">room</field>
            <field name="view_mode">tree,form</field>
        </record>
        
     <!-- Menu item to open Rooms -->
        <menuitem id="_rooms"
          name="Rooms"
          parent="reservas_conf"
          sequence="20"
          action="action_room" />

    </data>
</openerp>
